{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],

    "jsx": "react-jsx",

    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true,

    "types": [
      "node"
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },

    "allowImportingTsExtensions": true
  }
}
